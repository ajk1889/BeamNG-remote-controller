<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatSeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/clutch"
            android:padding="40dp"
            android:layout_weight="1"
            android:background="#559"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Misc"
            android:id="@+id/misc"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#553"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:id="@+id/engineStart"
            android:background="#633"
            android:gravity="center"
            android:text="Start"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/handBrake"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Handbrake"
            android:background="@color/cardview_dark_background" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatSeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/brake"
            android:layout_weight="1"
            android:padding="40dp"
            android:background="#595"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Up"
            android:id="@+id/gearUp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#353"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatSeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:layout_weight="1"
            android:id="@+id/accelerator"
            android:background="#955"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Down"
            android:id="@+id/gearDown"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#335"/>
    </LinearLayout>
</LinearLayout>